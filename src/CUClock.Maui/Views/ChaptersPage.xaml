<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CUClock.Shared.ViewModels;assembly=CUClock.Shared"
             xmlns:entities="clr-namespace:Aphorismus.Shared.Entities;assembly=Aphorismus.Shared"
             x:Class="CUClock.Maui.Views.ChaptersPage"
             x:DataType="vm:Chapters" Title="Temas">
    <Grid ColumnDefinitions="*"
          RowDefinitions="Auto,*">
        <Label
            Text="Seleccione los temas a incluir: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView Grid.Row="1">
            <ListView x:Name="ChaptersList"
                      ItemsSource="{Binding Items}"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Capitulo">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Text="{Binding NumeroCapitulo}" WidthRequest="40"
                                       HorizontalTextAlignment="End" 
                                       VerticalTextAlignment="Center" />
                                <Switch IsToggled="True" />
                                <!--IsToggled="{Binding IsSelected}"-->
                                <Label Text="{Binding Nombre}"
                                       VerticalTextAlignment="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>